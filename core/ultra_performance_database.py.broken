        self._pool_lock = asyncio.Lock()
        self._active_connections = 0

        # Multi-tier cache system
        self._l1_cache: Dict[str, CacheEntry] = {}  # Hot data
        self._l2_cache: Dict[str, bytes] = {}  # Compressed data
